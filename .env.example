# ===========================================
# RECHNER-BAUKASTEN - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control!

# ----- AUTH -----
# Generate a secure secret: openssl rand -hex 32
BETTER_AUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-hex-32

# ----- SERVER -----
PORT=3001
NODE_ENV=development

# ----- DATABASE (PostgreSQL) -----
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password-here@localhost:5432/rechner_baukasten

# ----- URLs -----
# Your domain with HTTPS (required in production)
APP_URL=https://your-domain.com
BETTER_AUTH_URL=https://your-domain.com
